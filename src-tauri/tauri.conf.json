{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Oxide-Lab",
  "version": "0.13.1",
  "identifier": "OxideLab",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1411",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Oxide Lab",
        "decorations": false,
        "transparent": true,
        "width": 1280,
        "height": 720,
        "minWidth": 640,
        "minHeight": 360,
        "label": "main"
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self'; connect-src 'self' https: wss:; media-src 'self'; object-src 'none'; frame-src 'none'; base-uri 'self'; form-action 'self';"
    }
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    }
  },
  "bundle": {
    "shortDescription": "Oxide Lab - AI Chat Application",
    "longDescription": "Private AI chat application with local model support",
    "active": true,
    "targets": "nsis",
    "publisher": "FerrisMind",
    "icon": [
      "icons/icon.png",
      "icons/128x128@2x.png",
      "icons/128x128.png",
      "icons/64x64.png",
      "icons/32x32.png",
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/Square310x310Logo.png",
      "icons/Square284x284Logo.png",
      "icons/Square150x150Logo.png",
      "icons/Square142x142Logo.png",
      "icons/Square107x107Logo.png",
      "icons/Square89x89Logo.png",
      "icons/Square71x71Logo.png",
      "icons/Square44x44Logo.png",
      "icons/Square30x30Logo.png",
      "icons/StoreLogo.png"
    ]
  }
}
